<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:panels="using:SlateEditor.ViewModels.Panels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SlateEditor.Views.Panels.ScenePanelView"
             x:DataType="panels:ScenePanelViewModel">
    
    <Design.DataContext>
        <panels:ScenePanelViewModel />
    </Design.DataContext>
    
    <StackPanel Margin="2">
        <TextBlock Text="This is scene panel!"/>
        <Panel Margin="5">
            <TreeDataGrid Source="{Binding Bind_SceneObjects}"/>
        </Panel>
    </StackPanel>
</UserControl>
